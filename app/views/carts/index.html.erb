<h1>Listing carts</h1>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Customer</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.book %></td>
        <td><%= cart.customer %></td>
        <td><%= cart.quantity %></td>
        <td><%= link_to 'Show', cart %></td>
        <td><%= link_to 'Edit', edit_cart_path(cart) %></td>
        <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= @total  %>

<br>

<%= link_to 'New Cart', new_cart_path %>
